public Boolean isLeapYear(Integer year) {
    //code here

    String ttrue='+year+' should be a leap year';
    String ffalse='+year+' should not be a leap year';

    if(Math.mod(year,4)==0){
        if(Math.mod(year,100)==0){
            if(Math.mod(year,400)==0){
                return true
            }
            else(){
                return false;
            }
        }
        else(){
            return true;
        }
    }else(){
        return false;
    }
}
